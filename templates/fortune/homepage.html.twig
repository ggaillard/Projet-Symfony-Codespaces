{% extends 'base.html.twig' %}

{% block body %}

<h1 class="text-center my-8 text-2xl text-slate-800 font-bold">Requête pour votre bonheur</h1>
<p class="text-center">Examiner les catégories pour connaître les porte-bonheur disponibles</p>
<div class="xl:container xl:mx-auto grid grid-cols-2 gap-6 px-10 mt-8 mb-10">
    {% for categoryData in categories %}
        {% set category = categoryData[0] %}
        <a class="bg-orange-400 hover:bg-orange-500 text-white text-center rounded-full p-4" href="{{ path('app_category_show', {'id':  category.id}) }}">
            <span class="fa {{ category.iconKey }}"></span> <span class="font-bold text-lg">{{ category.name }}</span>  ({{ categoryData.fortuneCookiesTotal }})
        </a>
        <a href="{{ path('app_categories_by_icon', {'iconKey': category.iconKey}) }}">Voir les catégories par cette icône</a>
    {% else %}
        <h3>Hmm... il ne semble pas y avoir de fortune</h3>
    {% endfor %}
</div>
{% endblock %}


